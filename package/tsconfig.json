{
	"extends": "astro/tsconfigs/strictest",
	"compilerOptions": {
		"module": "Node16",
		"moduleResolution": "Node16",
		"jsx": "preserve",
		"baseUrl": ".",
		"paths": {
			"~routes/*": ["routes/*"],
			"~db/*": ["db/*"],
			"~lib/*": ["src/lib/*"],
			"~types/*": ["src/types/*"],
			"~schemas/*": ["src/schemas/*"]
		}
	},
	"exclude": ["dist"]
}
