{
	"extends": "astro/tsconfigs/strictest",
	"compilerOptions": {
		"module": "ESNext",
		"moduleResolution": "Bundler",
		"jsx": "preserve",
		"baseUrl": ".",
		"paths": {
			"~src/*": ["src/*"],
			"~lib/*": ["src/lib/*"],
			"~types/*": ["src/types/*"],
			"~schemas/*": ["src/schemas/*"],
			"~stubs/*": ["src/stubs/*"],
			"~utils/*": ["src/utils/*"]
		}
	},
	"exclude": ["dist"]
}
