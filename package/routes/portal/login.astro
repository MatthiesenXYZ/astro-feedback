---
import LoginCard from '../components/LoginCard.astro';
import StaticPageLoginCheck from '../components/StaticPageLoginCheck.astro';
import VerticalContainer from '../components/VerticalContainer.astro';
import { getLangFromUrl } from '../i18n';
import BaseLayout from '../layouts/BaseLayout.astro';

export async function getStaticPaths() {
	return [
		{ params: { locale: undefined } },
		{ params: { locale: 'en' } },
		{ params: { locale: 'es' } },
	];
}
const lang = getLangFromUrl(Astro.url);
---

<BaseLayout sideBarActiveItemID="login" lang={lang}>

  <VerticalContainer>

    <LoginCard />
  
  </VerticalContainer>

  <StaticPageLoginCheck server:defer />
</BaseLayout>
