---
import type { RouteMap } from 'astro-feedback:routes';
import { Image } from 'astro:assets';
import Logo from '../assets/astrofeedback-logo.webp';
import Menu from './icons/Menu.astro';

interface Props {
	r: RouteMap;
	includeSidebar?: boolean;
}

const {
	includeSidebar = true,
	r: {
		base: { index },
	},
} = Astro.props;
---
<div
  class="sticky lg:hidden top-0 z-30 flex h-16 w-full justify-center bg-opacity-90 backdrop-blur transition-all duration-100 bg-base-100 text-base-content shadow-sm"
>
  <div class="navbar">
    <div class="navbar-start">
      {includeSidebar && <label for="my-drawer" class="btn btn-square btn-ghost">
        <Menu />
      </label>}
    </div>
    <div class="navbar-center">
      <a class="btn btn-ghost normal-case text-xl" href={index}>Astro-Feedback <Image src={Logo} height={48} width={48} alt="Logo" loading={'eager'}/></a>
    </div>
    <div class="navbar-end"></div>
  </div>
</div>
