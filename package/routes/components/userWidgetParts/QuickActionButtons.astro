---
import RedirectButton from '../RedirectButton.astro';
import type { currentIcons } from '../icons/GetIcon.astro';
import GetIcon from '../icons/GetIcon.astro';

export interface Props {
	quickAction: {
		label: string;
		link: string;
		icon: currentIcons;
		color: string;
	};
}

const {
	quickAction: { color, icon, label, link },
} = Astro.props;
---
<RedirectButton 
    link={link} 
    class:list={['btn', color, 'my-2', 'font-bold']}
    >{label}
    <GetIcon icon={icon} class='h-[1.2rem] w-[1.2rem]'/>
</RedirectButton>