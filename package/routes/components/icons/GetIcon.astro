---
import type { HTMLAttributes } from 'astro/types';
import Asterisk from './Asterisk.astro';
import Back from './Back.astro';
import Feedback from './Feedback.astro';
import Github from './Github.astro';
import Login from './Login.astro';
import Mail from './Mail.astro';
import Menu from './Menu.astro';
import Project from './Project.astro';
import Separator from './Separator.astro';
import Submit from './Submit.astro';

// biome-ignore lint/suspicious/noExplicitAny: <explanation>
type AstroComponent = (_props: Record<string, any>) => any;

type currentIcons =
	| 'asterisk'
	| 'back'
	| 'feedback'
	| 'github'
	| 'login'
	| 'mail'
	| 'menu'
	| 'project'
	| 'separator'
	| 'submit';

// Map of icon names to Astro components
const Components: Record<currentIcons, AstroComponent> = {
	asterisk: Asterisk,
	back: Back,
	feedback: Feedback,
	github: Github,
	login: Login,
	mail: Mail,
	menu: Menu,
	project: Project,
	separator: Separator,
	submit: Submit,
};

interface Props extends HTMLAttributes<'svg'> {
	icon: currentIcons;
	width?: number;
	height?: number;
}

const { icon, width = 128, height = width, ...props } = Astro.props;

const Tag = Components[icon];
---
{ Tag && <Tag width={width} height={height} {...props} /> }